{
  "manifest_version": 3,
  "name": "Snorgnote Web Clipper",
  "description": "Clip full pages or selected text into Snorgnote.",
  "version": "0.1.0",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "src/extension/background.js"
  },
  "action": {
    "default_popup": "src/extension/popup.html",
    "default_title": "Snorgnote Clipper"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/extension/content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
